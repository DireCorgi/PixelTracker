.pixel-container {
  display: flex;
  flex-wrap: nowrap;
}

.panel-container {
  flex-grow: 1;
  min-width: 32.5%;
  border: 1px solid #000;
  height: 95vh;
  overflow-x: hidden;
  border-left: 5px solid #1D1D1D;
}

.panel-header {
  background: #2C2D2F;
  font-size: 13px;
  color: #fff;
  border-top: 1px solid #393A3C;
  padding: 14px;
}

.panel-header button {
  width: 3px;
  height: 10px;
  background: url("<%= image_path 'icons/xmark-icon-white.png' %>");
  background-size: cover;
  margin-right: 10px;
  opacity: .6;
}

.panel-header button:hover {
  opacity: .9;
}

.pixel-form {
  background: #E9E7DD;
  border-top: 1px solid #ADB0B7;
  border-bottom: 1px solid #ADB0B7;
  padding: 8px;
  border-radius: 0;
}

.pixel-form > button {
  padding: 0;
  color: #AFAFAF;
  text-shadow: 0 0 0;
  position: relative;
  right: 2px;
}
.pixel-form > input {
  display: inline-block;
  background: #fff;
  border: 1px solid #ADB0B7;
  border-radius: 3px;
  width: 90%;
  padding: 4px 5px;
  margin-left: 5px;
  margin-bottom: 5px;
}

.pixel-form-nav {
  display: block;
  height: 24px;
  margin-left: 5px;
  width: 260px;
  margin-bottom: 5px;
}


div.id-number {
  width: 100px;
  height: 100%;
  font-size: 11px;
  color: #A8A7A2;
}

.left-form-nav > button {
  color: #ababab;
  padding: 2px;
  font-size: 11px;
}
.left-form-nav > button:hover {
  color: #989898;
}

.left-form-nav {
  border: 1px solid #C1C0BB;
  height: 18px;
  float: left;
  padding: 2px;
  border-radius: 2px;
}

.left-form-nav > div {
  display: inline-block;
  height: 100%;
}

.right-form-nav {
  float: right;
}

.right-form-nav > button {
  font-size: 11px;
  text-shadow: 0 0 0;
  font-weight: 600;
  color: #716666;
  background: #DFDCD0;
  margin-left: 5px;
  padding-left: 10px;
  padding-right: 10px;
}

button.cancel-button:hover {
  text-decoration: underline;
}

button.save-button {
  background: #666666;
  color: #fff;
  border: 1px solid #555555;
  font-weight: normal;;
  letter-spacing: 1px;
  padding: 3px 12px;
}

button.save-button:hover {
  background: #2B4C74;
  border: 1px solid #24364C;

}

.drop-down-features {
  background: #F6F6F6;
  border: 1px solid #ADB0B7;
  border-radius: 3px;
  font-size: 10px;
  width: 260px;
  margin-left: 5px;
  border-bottom: 0;
  color: #505050;
  margin-bottom: 5px;
}

.drop-down-features > label {
  display: block;
  padding: 5px;
  border-bottom: 1px solid #ADB0B7;
}

.drop-down-features > label > select {
  float: right;
  height: 16px;
  background: transparent;
  border: 0;
}

.pixel-form > label {
  display: block;
  margin-left: 5px;
  margin-bottom: 5px;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
}

.pixel-form > label > textarea {
  display: block;
  background: #fff;
  border: 1px solid #ADB0B7;
  border-radius: 3px;
  resize: none;
  width: 94%;
  height: 36px;
  font-weight: normal;
  padding: 5px;
  margin-top: 4px;
}

.pixel-list-item-summary > button {
  font-size: 10px;
}
