.project-detail-container {
  font-size: 12px;
  background: #484F57;
  height: 100vh;
  overflow: hidden;
}

.main-content-container {
  height: 100%;
}

.side-bar {
  float:left;
  background: #2F3337;
  width: 200px;
  height: 100%;
  border: 1px solid black;
  overflow: hidden;
  transition: width .4s;
}

.shrink{
  width: 42px;
}

.side-bar-header {
  padding: 9px 8px;
  background: #212123;
  border-bottom: 1px solid #000;
  border-top: 1px solid #000;
  width: 200px;
}

.side-bar-shrink {
  border-top: 1px solid #393A3C;
  width: 200px;
  padding:10px 10px;
}

.side-bar-shrink > button {
  background: url("<%= image_path 'icons/menu-white.png' %>");
  background-size: cover;
  height: 10px;
  width: 6px;
  opacity: .3;
}

.side-bar-header > button {
  background: url("<%= image_path 'icons/person-icon-white.png' %>");
  background-size: cover;
  height: 9px;
  width: 3px;
  opacity: .3;
}

.side-bar-header > button:hover {
  opacity: .6;
}

.side-bar-header > span {
  font-size: 9px;
  font-weight: 400;
  color: #BBB8B6;
  padding: 0;
}

.private-page {
  text-align: center;
  background: #F3F4F4;
  color: #3C4858;
  height: 100vh;
  padding-top: 15%;
}

.private-page h1 {
  font-size: 32px;
  font-weight:600;
}

.private-page h2 {
  font-size: 20px;
  color: #6F6F6F;
}
