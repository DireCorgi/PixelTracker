.projects-container {
  display: block;
  margin: 20px auto;
  width: 40%;
  min-width: 400px;
  max-width: 550px;
}

.projects-list-header {
  padding: 15px;
}

.projects-list-header > h1 {
  float: left;
  font-size: 20px;
  font-weight: 600;
  color: #613333;
  margin-left: 5px
}

.projects-list-header > button {
  float: right;
  color: #fff;
  background: #59AC5A;
  font-size: 14px;
  padding: 10px 14px;
  position: relative;
  top: -5px;
}

.projects-list-header > button:hover {
  background: #4B974B;
}

.project-list {
  padding: 15px;
}

.project-detail {
  background: #fff;
  margin-bottom: 30px;
  padding: 15px 40px;
  border: 1px solid #ccc;
  border-top: 2px solid #74a4d7;
}

.project-detail > a {
  float: left;
  color: #3C4858;
  font-size: 16px;
  font-weight: 600;

}

.project-detail a:hover {
  color: #3177c3;
  text-decoration: underline;
}

.project-detail > button {
  float: right;
  width: 24px;
  height: 24px;
  background: url("<%= image_path 'icons/people-icon.png' %>");
  background-size: cover;
  opacity: 0.6;
  position: relative;
  padding: 2px;
  transition: opacity 0.3s;
}

.project-detail > button:after{
  content: "Manage project members";
  display: none;
  width: 130px;
  padding: 4px;
  border-radius: 2px;
  background: #38474F;
  font-size: 11px;
  position: absolute;
  top: 30px;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
}

.project-detail > button:before {
  display: none;
  content: "";
  position: absolute;
  top: 26px;
  right: 9px;
  border-top: 0;
  border-bottom: 5px solid #38474F;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
}

.project-detail > button:hover {
  opacity: 1;
}

.project-detail > button:hover:before,
.project-detail > button:hover:after {
  display: block;
}

.private-project:after{
  content: "";
  width: 12px;
  height: 12px;
  margin: 0 3px;
  background: url("<%= image_path 'icons/lock-icon.png' %>");
  background-size: cover;
  position: relative;
  display: inline-block;
}

.pixel-list-item-container {
  position: relative;
}

i.material-icons {
  font-size: inherit;
  display: inline-block;
}

.pixel-list-item-container button {
  background-image: none;
  font-size: 16px;
  text-shadow: 0 0 0;
  color: #AFAFAF;
  padding: 0;
}

.pixel-list-item-summary {
  display: flex;
  flex-wrap: nowrap;
  padding: 0;
  background: transparent;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #DDDDDD;
}

.pixel-list-item-summary > figure {
  margin: 0;
  font-size: 16px;
  color: #dde882;
  text-shadow: 0 0 1px black;
  width: 12px;
  padding: 4px 0;
  margin-right: 4px;
}

.pixel-list-item-summary > span {
  padding: 0;
  color: #959894;
  padding: 4px 0 4px 0;
}

.pixel-list-item-summary > span:hover {
  color: #c1c1c1;
  cursor: pointer;
}

.pixel-list-item-summary > summary {
  padding: 4px 2px;
  flex-grow: 1;
}

figure.pixel-points {
  text-shadow: 0 0 0;
  color: #739DBC;
  font-size: 11px;
  padding: 6px 0px;
}

.hidden-pixel-list-details{
  position: absolute;
  display: none;
  top: 19px;
  left: 8%;
  background: #F5F5F5;
  width: 85%;
  border-radius: 4px;
  border: 1px solid black;
  box-shadow: 1px 1px 4px #323232;
  padding: 0;
  overflow: hidden;
  z-index: 1;
}

.hidden-pixel-list-details > h1 {
  font-weight: 600;
  color: #fff;
  background: #404040;
  padding: 8px 10px;
}

.pixel-description {
  background: #F0F0F0;
  padding: 8px 10px;
  border-top: 1px solid #DDDDDD;
  border-bottom: 1px solid #DDDDDD;
  font-size: 11px
}

.pixel-description > h2 {
  color: #8f8f8f;
  font-weight: 600;
}

.hidden-pixel-list-details > footer {
  background: #E3E3E3;
  font-size: 11px;
  padding: 6px 10px;
  color: #777777;
}

.pixel-description-footer-left {
  float: left;
}

.pixel-description-footer-right {
  float: right;
}

.pixel-list-item-summary > span:hover + .hidden-pixel-list-details {
  display: block;
}

.hidden-pixel-list-details:hover {
  display: block;
}

.hidden-pixel-list-details > h3 {
  color: #8f8f8f;
  font-weight: 600;
  font-size: 11px;
  padding: 4px 10px;
  border-bottom: 1px solid #d1d4da;
}

.inside-description {
  padding: 4px 10px;
  margin: 0;
  font-size: 11px;
}

.inside-description > input {
  float: left;
  margin: auto 3px;
  padding: 0;
  position: relative;
  top: 2px;
}

.description-ul {
  margin: 0;
}

ol.description-ol {
  margin: 0;
  padding: 0 5px 5px 5px;
}

li.ordered {
  border: 0;
  margin: 0;
  padding-bottom: 0;
  padding-top: 0;
}

.task-complete {
  text-decoration: line-through;
}

h3.tasks-header {
  border-bottom: 0;
  padding-bottom: 0;
}

button.next-state-button {
  font-size: 10px;
  color: #111111;
  font-weight: 600;
  background: #E0E2E5;
  border: 1px solid #C8CBD0;
  border-radius: 3px;
  width: 47px;
  height: 20px;
  text-align: center;
  margin: auto 4px;
  letter-spacing: 0.5px;
}

button.drop-down-button {
  font-size: 10px;
  text-shadow: 0 0 0;
  color: #111;
  padding: 0;
  float: right;
  position: relative;
  bottom: 4px;
}

button.next-state-button:hover {
  background: #c8c8c8;
  border: 1px solid #a8acb1;
}

button.Finish-button {
  background: #203E64;
  border: 1px solid #172C51;
  color: #EEEEE9;
}

button.Finish-button:hover {
  background: #172C51;
  border: 1px solid #111E40;
}

button.Deliver-button {
  background: #F39300;
  border: 1px solid #F08000;
  color: #EEEEEE;
}

button.Deliver-button:hover {
  background: #F08000;
  border: 1px solid #EC6B00;
}

button.Accept-button {
  background: #629200;
  border: 1px solid #4E8200;
  color: #EEEEEE;
}

button.Accept-button:hover {
  background: #4E8200;
  border: 1px solid #3C7100;
}

button.Reject-button {
  background: #A71F39;
  border: 1px solid #950828;
  color: #EEEEEE;
}

button.Reject-button:hover {
  background: #950828;
  border: 1px solid #82001B;
}

button.Restart-button:before {
  content: '';
  display: inline-block;
  width: 8px;
  height: 8px;
  background: #AA1224;
  border-radius: 8px;
  margin-right: 2px;
}

button.Restart-button {
  width: 56px;
}

.Started-item, .Finished-item, .Delivered-item, .Rejected-item {
  background: #F3F3D1;
  border-bottom: 1px solid #DBDBB0;
}

.Unstarted-item {
  background: #F4F4F4;
}


.Accepted-item {
  background: #DAEBCF;
  border-bottom: 1px solid #C3D5B4;
  border-top: 1px solid #EEFCE2;
}

.release-pixel {
  background: #407AA5;
  border-top: 1px solid #5982A7;
  border-bottom: 1px solid #306494;
  color: #F9FFFC;
  font-weight: 600;
}

.icebox-pixel {
  background: #E4EFF7;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #DDDDDD;
  font-weight: normal;
  color: black;
}

.dragging {
  background: #FFFF99;
}
